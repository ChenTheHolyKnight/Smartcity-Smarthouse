<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>


<AnchorPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="il.ac.technion.cs.smarthouse.DeveloperSimulator.MainSensroListController">
	<children>
		<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<TableView fx:id="sensorTable" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0">
					<columns>
						<TableColumn fx:id="nameColumn" text="Name" />
						<TableColumn fx:id="configColumn" />
						<TableColumn fx:id="messageColumn" />
						<TableColumn fx:id="deleteColumn" />
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
				<Button text="Add New Sensor" fx:id="addButton"/>
			</children>
		</VBox>
	</children>
</AnchorPane>

